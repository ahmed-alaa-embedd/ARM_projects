#ifndef NVIC_PRIVATE_H
#define NVIC_PRIVATE_H

/* 0xE000E100 base address */

#define NVIC_ISER0 *((u32*)0xE000E100)  //Enable external interrupt 0-31 
#define NVIC_ISER1 *((u32*)0xE000E104)  //Enable external interrupt 32-63 

#define NVIC_ICER0 *((u32*)0xE000E180)
#define NVIC_ICER1 *((u32*)0xE000E184)

#define NVIC_ISPR0 *((u32*)0xE000E200)
#define NVIC_ISPR1 *((u32*)0xE000E204)

#define NVIC_ICPR0 *((u32*)0xE000E280)
#define NVIC_ICPR1 *((u32*)0xE000E284)

#define NVIC_IABR0 *((volatile u32*)0xE000E300)	//i have to write volatile in read only register
#define NVIC_IABR1 *((volatile u32*)0xE000E304)	//i have to write volatile in read only register

#define NVIC_IPR 	((volatile u8*)0xE000E400)
#define SCB_AIRCR		((volatile u8*)0xE000ED00 + 0x0C)


#endif

